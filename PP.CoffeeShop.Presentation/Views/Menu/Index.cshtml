@using PP.CoffeeShop.Presentation.Data;
@model List<DrinkCategory>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<partial name="_SideNavigationBar" />


    <div class="col-8">
        <h2>Menu</h2>
        <h4>Drinks</h4>
        <hr>

        <div class="row  ">
            @foreach (var category in Model)
            {
                <div class="col-6 category-thumbnail align-items-center">

                <a asp-controller="Drinks" asp-action="Index" asp-route-drinkCategory="@category.Id">
                        @if (string.IsNullOrEmpty(category.ImageUrl))
                        {
                            <img src="https://www.starbucks.com/weblx/images/product-placeholder.png" alt="..." class="img-thumbnail rounded-circle">
                        
                        }
                        else
                        {
                            <img src="@category.ImageUrl" alt="..." class="img-thumbnail rounded-circle">
                        }
                        
                    </a>
                    <h3>@category.Name</h3>
                </div>

            }
        </div>


    </div>



</div>

<style>
    .category-thumbnail > a > img{
        /*max-width: 112px;*/
        max-height:150px;
    }
</style>





